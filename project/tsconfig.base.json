{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@project/account-config": ["libs/account/config/src/index.ts"],
      "@project/api-notify": ["libs/api/notify/src/index.ts"],
      "@project/app-config": ["libs/shared/app-config/src/index.ts"],
      "@project/authentication": ["libs/account/authentication/src/index.ts"],
      "@project/blog-comment": ["libs/blog/blog-comment/src/index.ts"],
      "@project/blog-favorite": ["libs/blog/blog-favorite/src/index.ts"],
      "@project/blog-feed": ["libs/blog/blog-feed/src/index.ts"],
      "@project/blog-post": ["libs/blog/blog-post/src/index.ts"],
      "@project/blog-user": ["libs/account/blog-user/src/index.ts"],
      "@project/core": ["libs/shared/core/src/index.ts"],
      "@project/data-access": ["libs/shared/data-access/src/index.ts"],
      "@project/email-subscriber": ["libs/notify/email-subscriber/src/index.ts"],
      "@project/file-uploader": ["libs/file-vault/file-uploader/src/index.ts"],
      "@project/file-vault-config": ["libs/file-vault/config/src/index.ts"],
      "@project/helpers": ["libs/shared/helpers/src/index.ts"],
      "@project/interceptors": ["libs/shared/interceptors/src/index.ts"],
      "@project/models": ["libs/blog/models/src/index.ts"],
      "@project/notify-config": ["libs/notify/config/src/index.ts"],
      "@project/pipes": ["libs/shared/pipes/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
